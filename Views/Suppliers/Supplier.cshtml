    }

    table td {
        padding: 5px;
    }

    table td a {
        color: #333;
    }

    table td a:hover {
        color: #448AFF;
    }

    td i.material-icons {
        height: 0px;
        line-height: 0px;
    }

    #invoice-table th:nth-child(6),
    #invoice-table td:nth-child(6),
    #payment-table th:nth-child(5),
    #payment-table td:nth-child(5) {
        text-align: right;
    }

    div.modal-content label {
        padding-left: 15px;
    }

    div.modal-content td {
        padding: 2px;
    }

