        <div id="profile-card" class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="~/images/gallary/11.png" alt="user bg">
            </div>

            <div class="card-content">
                <img src="~/images/@(Model.Supplier.Icon == "" ? "avatar/avatar-10.png" : "logos/" + Model.Supplier.Icon)" alt="" class="circle responsive-img activator card-profile-image grey lighten-3 padding-2">
