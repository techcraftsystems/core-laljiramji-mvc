@{
    ViewData["Title"] = "Sales";
}

<link rel="stylesheet" href="~/css/charts-sparkline.css">
<script src="~/js/scripts/jquery.sparkline.min.js"></script>
<script src="~/js/sales-sparklines.js"></script>

<style>
    .card .card-content {
        padding: 0 24px;
    }
    .card .card-content .card-title {
        margin-bottom: 0;
    }
</style>

<div id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row zero-margin">
            <div class="col s10 m6 l6">
                <ol class="breadcrumbs">
                    <li><a href="/">Home</a></li>
                    <li class="active">Sales</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div style="clear:both; margin-top:50px;"></div>

<div class="row">
    <div class="col s12 m6 l3">
        <div class="ct-chart card z-depth-2 border-radius-6">
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <h4 class="card-title"><a href="/sales/total-sales" class="black-text">Total Sales</a></h4>
                    </div>
                    <div class="col s12 display-flex">
                        <div id="sales-bar-1" class="right"></div>
                        <p class="mt-4 pink-text accent-2"><i class="material-icons dp48 vertical-align-bottom">arrow_upward</i>KES 9,504.00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="ct-chart card z-depth-2 border-radius-6">
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <h4 class="card-title"><a href="/sales/pump-sales" class="black-text">Pump Sales</a></h4>
                    </div>
                    <div class="col s12 display-flex">
                        <div id="sales-bar-2" class="right"></div>
                        <p class="mt-4 blue-text">
                            <i class="material-icons dp48 vertical-align-bottom">arrow_upward</i>
                            1896
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="ct-chart card z-depth-2 border-radius-6">
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <h4 class="card-title"><a href="/sales/credit-sales" class="black-text">Credit Sales</a></h4>
                    </div>
                    <div class="col s12 display-flex light-green-text">
                        <div id="sales-bar-3" class="right"></div>
                        <p class="mt-4 ">
                            <i class="material-icons dp48 vertical-align-bottom">arrow_upward</i>
                            8546
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="ct-chart card z-depth-2 border-radius-6">
            <div class="card-content">
                <div class="row">
                    <div class="col s12">
                        <h4 class="card-title"><a href="/sales/deliveries" class="black-text">Deliveries</a></h4>
                    </div>
                    <div class="col s12 display-flex amber-text accent-2">
                        <div id="sales-bar-4" class="right"></div>
                        <p class="mt-4 ">
                            <i class="material-icons dp48 vertical-align-bottom">arrow_downward</i>
                            15%
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>